<div class="container px-5 px-sm-0">
	<div id="error_explanation">
		<%= render 'layouts/errors', book: @book %>
  </div>
	<div class="row">
		<div class="col-md-3">
			<h2>User info</h2>
			<%= attachment_image_tag current_user, :profile_image, size: "100x100", format: 'jpeg', class:"attachment user profile_image fallback", fallback: "no_image.jpg" %>
			<table class="table">
				<tbody>
					<tr></tr>
					<tr>
						<th>name</th>
						<th><%= current_user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= current_user.introduction %></th>
					</tr>
					<tr>
						<th>follows</th>
						<th>
							<%= link_to current_user.following.count, following_user_path(current_user.id) %>
						</th>
					</tr>
					<tr>
						<th>followers</th>
						<th><%= link_to current_user.followers.count, followers_user_path(current_user.id) %></th>
					</tr>
				</tbody>
			</table>
			<div class="row">
				<%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
				<i class="fas fa-user-cog"></i>
				<% end %>
			</div>
			<h2 class="mt-3">New book</h2>
			<%= render 'form', book: @book %>
		</div>
		<div class="col-md-8 offset-md-1">
			<h2>Books</h2>
			<%= render 'index', books: @books %>
		</div>
	</div>
</div>

