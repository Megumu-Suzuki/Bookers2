<h2>Favorite Books</h2>
<% if @favorites.exists? %>
	<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @user.favorite_books.each do |book| %>
					<tr>
						<td>
							<%= attachment_image_tag book.user, :profile_image, size: "40x40", format: 'jpeg', class:"attachment user profile_image fallback", fallback: "no_image.jpg"%>
						</td>
						<td>
							<%= link_to book.title, book_path(book.id) %>
						</td>
						<td>
							<%= book.body %>
						</td>
						<td class="favorite-<%= book.id %>">
							<%= render 'favorites/favorite-btn', book: book %>
						</td>
						<td>
							<p>コメント数：<%= book.book_comments.count %></p>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
<% else %>
	<p>いいねしている本はありません</p>
<% end %>