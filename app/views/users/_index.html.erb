<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</th>
	</thead>
	<tbody>
	  <% users.each do |user| %>
			<tr>
				<td><%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg', class:"attachment user profile_image fallback", fallback: "no_image.jpg"%></td>
				<td><%= user.name %></td>
				<td><p>フォロー数：<%= user.following.count %></p></td>
				<td><p>フォロワー数：<%= user.followers.count %></p></td>
				<td>
					<% unless current_user == user %>
						<% if current_user.following?(user) %>
							<%= form_for(current_user.active_relationships.find_by(followed_id: user.id), html: { method: :delete }) do |f| %>
							<%= f.submit "フォロー外す", class: "typesubmit" %>
							<% end %>
						<% else %>
							<%= form_for(current_user.active_relationships.build) do |f| %>
							<div><%= hidden_field_tag :followed_id, user.id %></div>
							<%= f.submit "フォローする", class: "typesubmit" %>
							<% end %>
						<% end %>
					<% end %>
				</td>
				<td><%= link_to 'Show', user_path(user.id), class: "@user.id" %></td>
					</tr>
				<% end %>
				</tbody>
			</table>