<% if @model == 'user' %>
	<h2>Users search for "<%= @content %>"</h2>
	<% if @records.exists? %>
		<%= render 'users/index', users: @records %>
	<% else %>
		<p>検索条件に結果がありません</p>
	<% end %>
<% else @model == 'book' %>
	<h2>Books search for "<%= @content %>"</h2>
	<% if @records.exists? %>
		<%= render 'books/index', books: @records %>
	<% else %>
		<p>検索条件に結果がありません</p>
	<% end %>
<% end %>